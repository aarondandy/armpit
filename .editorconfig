# editorconfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use 4 spaces as indentation
[*]
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,cjs,mjs,ts}]
indent_size = 2
end_of_line = lf

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sh]
end_of_line = lf

[*.{cmd, bat}]
end_of_line = crlf

[*.ps1]
indent_size = 2
